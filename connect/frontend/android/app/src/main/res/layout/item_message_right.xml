<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/messageContainer">


<TextView
        android:id="@+id/textRightMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_right_message"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/play"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_play_arrow_24"
        app:layout_constraintEnd_toEndOf="@id/textRightMessage"
        app:layout_constraintTop_toBottomOf="@id/textRightMessage"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
